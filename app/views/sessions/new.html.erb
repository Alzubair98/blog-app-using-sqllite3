<h1 class='text-center mt-4'>log in</h1>

<%= form_with(scope: :session, url: login_path, local:true) do |f| %>
<div class="container">
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email , class:"form-control shadow rounded" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password , class:"form-control shadow rounded" %>
  </div>

  <div class="submit-button">
    <%= f.submit "log in" , class:"btn btn-outline-dark btn-lg" %>
  </div>
</div>
<% end %>